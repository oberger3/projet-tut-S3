{% extends 'base.html.twig' %}

{% block contenu %}
    <main>
        <title>{% block title %}Contact{% endblock %}</title>
        <div class="row" style="padding-bottom: 80px;">
            <div class="large-10 large-offset-1 columns">
                <h1 style="margin-top: 20px">Contactez-moi !</h1>
                <form class="cf">
                    <div class="half left cf">
                        <input type="text" id="input-name" placeholder="Nom">
                        <input type="email" id="input-email" placeholder="Adresse mail">
                        <input type="text" id="input-subject" placeholder="Sujet">
                    </div>
                    <div class="half right cf">
                        <textarea name="message" type="text" id="input-message" placeholder="Message"></textarea>
                    </div>
                    <input type="submit" value="Envoyer" id="input-submit">
                </form>
            </div>
        </div>
    </main>
{% endblock %}
