<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\CommentaireArticle" table="COMMENTAIRE_ARTICLE">
    <indexes>
      <index name="FK_COMMENTAIRE_ARTICLE_article_id" columns="article_id"/>
    </indexes>
    <id name="idcommentaireA" type="integer" column="idCommentaire_A">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="dateajout" type="datetime" column="dateAjout" nullable="false"/>
    <field name="pseudo" type="string" column="pseudo" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="commentaire" type="string" column="commentaire" length="200" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="article" target-entity="Article" fetch="LAZY">
      <join-columns>
        <join-column name="article_id" referenced-column-name="idArticle"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
