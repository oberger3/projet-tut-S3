<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Oeuvre" table="OEUVRE">
    <indexes>
      <index name="FK_OEUVRE_artiste_id" columns="artiste_id"/>
      <index name="FK_OEUVRE_categorie_id" columns="categorie_id"/>
      <index name="FK_OEUVRE_technique_id" columns="technique_id"/>
    </indexes>
    <id name="idoeuvre" type="integer" column="idOeuvre">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nomoeuvre" type="string" column="nomOeuvre" length="40" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="disponibilite" type="boolean" column="disponibilite" nullable="false"/>
    <field name="dateajout" type="datetime" column="dateAjout" nullable="false"/>
    <field name="texte" type="string" column="texte" length="500" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="photo" type="string" column="photo" length="20" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nbvue" type="integer" column="nbVue" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <many-to-one field="artiste" target-entity="Artiste" fetch="LAZY">
      <join-columns>
        <join-column name="artiste_id" referenced-column-name="idArtiste"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="categorie" target-entity="Categorie" fetch="LAZY">
      <join-columns>
        <join-column name="categorie_id" referenced-column-name="idCategorie"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="technique" target-entity="Technique" fetch="LAZY">
      <join-columns>
        <join-column name="technique_id" referenced-column-name="idTechnique"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
